<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="13dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="11dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/idEtudiantIdItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/idEtudiantNomeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="9dp"
            android:layout_toRightOf="@+id/idEtudiantPrenomItem"
            />

        <TextView
            android:id="@+id/idEtudiantPrenomItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prenom"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="9dp"
            />

        <TextView
            android:id="@+id/villeTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ville : "
            android:layout_below="@+id/idEtudiantPrenomItem"
            android:padding="6dp"
            />
        <TextView
            android:id="@+id/idVilleItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ville"
            android:layout_below="@+id/idEtudiantPrenomItem"
            android:padding="6dp"
            android:layout_toRightOf="@+id/villeTxtView"
            />

        <TextView
            android:id="@+id/sexeTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexe : "
            android:layout_below="@+id/idVilleItem"
            android:padding="6dp" />
        <TextView
            android:id="@+id/idSexeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sexe"
            android:layout_below="@+id/idVilleItem"
            android:padding="6dp"
            android:layout_toRightOf="@+id/sexeTxtView"
            />

        <ImageView
            android:id="@+id/idStudentImageItem"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_launcher_background" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>